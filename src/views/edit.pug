extends base.pug

block content 
    h1 Edit Video 
    form(method="POST")
        input(name="title", placeholder="Video Title",value=`${video.title}`, required)
        input(type="text" placeholder="Description" name="description", value=`${video.description}`)
        input(type="text" placeholder="Hashtags, separated by comma." name="hashtags", value=`${video.hashtags.join()}`)
        input(type="submit", value="Save")